{
  "files.autoSave": "onFocusChange",
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "foam.edit.linkReferenceDefinitions": "withoutExtensions", // Keep as withoutExtensions for github pages compatibility
  "foam.graph.style": {
    "background": "#202020",
    "fontSize": 12,
    "lineColor": "#277da1",
    "lineWidth": 0.2,
    "particleWidth": 1.0,
    "highlightedForeground": "#f9c74f",
    "node": {
      "note": "#277da1"
    }
  },
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    },
    "editor.wordWrap": "on"
  },
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "files.exclude": {
    "_site/**": true
  },
  "files.insertFinalNewline": true,
  "markdown.styles": [".vscode/custom-tag-style.css"],

  // UI & Workbench Minimization
  "workbench.activityBar.location": "default",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.editor.showTabs": "single",
  "window.commandCenter": false,
  "breadcrumbs.enabled": false,

  // Explorer Behavior
  "explorer.compactFolders": true,
  "explorer.sortOrder": "type",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 1,

  // Editor Chrome Cleanup
  "editor.lineNumbers": "off",
  "editor.glyphMargin": false,
  "editor.renderLineHighlight": "none",
  "editor.stickyScroll.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",

  // Editor Assistance / Signals
  "editor.lightbulb.enabled": "off",
  "editor.codeLens": false,
  "editor.hover.enabled": "on",

  // Markdown Preview Sync
  "markdown.preview.scrollPreviewWithEditor": true,
  "markdown.preview.scrollEditorWithPreview": true,

  // Typography
  "editor.fontFamily": "Palatino Linotype, Palatino, Book Antiqua, serif",
  "editor.fontSize": 14,
  "editor.fontLigatures": false,
  "terminal.integrated.fontFamily": "Consolas, 'Cascadia Mono', 'Fira Code', monospace",
  "terminal.integrated.fontSize": 14,

  // Cursor & Motion
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.smoothScrolling": false,

  // Unicode / Text Safety
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.unicodeHighlight.invisibleCharacters": true
}
